@model KPaTS.Models.SpaceModel

@{
    ViewBag.Title = "Edit space";
}

<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell--8-col mdl-shadow--2dp mdl-color--white card-padding">
        <h2>Create</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.LabelFor(m => m.Shortcut, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.Shortcut, new { @class = "mdl-textfield__input" })
                @Html.ValidationMessageFor(m => m.Shortcut)
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.LabelFor(m => m.Name, new { @class = "mdl-textfield__label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "mdl-textfield__input" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" />
            <div class="mdl-button mdl-js-button mdl-js-ripple-effect cancel-action">Cancel</div>
        }
    </div>
    <div class="mdl-layout-spacer"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
