@model KPaTS.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="mdl-grid mdl-cell--8-col">
<section class="mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-cell--4-col-phone card-padding">
@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.LabelFor(m => m.UserName, new { @class = "mdl-textfield__label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "mdl-textfield__input" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <br/>
        <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" value="Регистрация" />
}
</section>

<section class="social mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-cell--4-col-phone card-padding" id="socialLoginForm">
    <h4>Свяжите свою учетную запись в @ViewBag.ProviderDisplayName.</h4>
    <p>Вы прошли проверку через <strong>@ViewBag.ProviderDisplayName</strong>.
        Введите имя пользователя на этом сайте ниже и нажмите кнопку "Подтвердить", чтобы
        завершить вход.</p>
</section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
