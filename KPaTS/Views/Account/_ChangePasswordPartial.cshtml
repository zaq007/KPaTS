@model KPaTS.Models.LocalPasswordModel

<section class="mdl-color--white mdl-cell mdl-cell--12-col card-padding">
@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.OldPassword, new { @class = "mdl-textfield__label"})
        @Html.TextBoxFor(m => m.OldPassword, new { @class = "mdl-textfield__input" })
    </div>
    <br />
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.NewPassword, new { @class = "mdl-textfield__label"})
        @Html.TextBoxFor(m => m.NewPassword, new { @class = "mdl-textfield__input" })
    </div>
    <br />
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__input" })
    </div>
    <br />
    <input type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--accent" value="Смена пароля" />
}
</section>
